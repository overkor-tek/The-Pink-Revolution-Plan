# =============================================================================
# OVERKOR-TEK CLOUD FOUNDATION - DEVELOPMENT ENVIRONMENT
# =============================================================================
# This template is for local development.
# Copy to .env.development.local and customize as needed.
# =============================================================================

# -----------------------------------------------------------------------------
# ENVIRONMENT IDENTIFICATION
# -----------------------------------------------------------------------------
NODE_ENV=development
CLOUD_ENV=dev
DEPLOYMENT_NAME=overkor-local

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
API_BASE_URL=http://localhost:3000
API_VERSION=v1
API_PORT=3000
API_HOST=localhost

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (SQLite for local dev)
# -----------------------------------------------------------------------------
DATABASE_URL=file:./dev.db
# Or use PostgreSQL locally:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/overkor_dev
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=5
DATABASE_SSL=false

# -----------------------------------------------------------------------------
# AUTHENTICATION (Development secrets - NOT for production!)
# -----------------------------------------------------------------------------
JWT_SECRET=dev-jwt-secret-not-for-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=30d
SESSION_SECRET=dev-session-secret-not-for-production
BCRYPT_ROUNDS=8

# -----------------------------------------------------------------------------
# CONSCIOUSNESS NETWORK
# -----------------------------------------------------------------------------
CONSCIOUSNESS_NETWORK_ID=overkor-local
CONSCIOUSNESS_NODE_TYPE=development
SYNC_INTERVAL_MS=30000
NODE_DISCOVERY_ENABLED=false
MAX_CONNECTED_NODES=5
HEARTBEAT_INTERVAL_MS=120000

# -----------------------------------------------------------------------------
# MONITORING & ANALYTICS
# -----------------------------------------------------------------------------
ANALYTICS_ENABLED=false
MONITORING_ENABLED=true
LOG_LEVEL=debug
LOG_FORMAT=pretty

# -----------------------------------------------------------------------------
# RATE LIMITING (Disabled for development)
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=false

# -----------------------------------------------------------------------------
# SECURITY (Disabled for development convenience)
# -----------------------------------------------------------------------------
CORS_ORIGIN=*
HELMET_ENABLED=false
CSRF_ENABLED=false

# -----------------------------------------------------------------------------
# PINK REVOLUTION BRANDING
# -----------------------------------------------------------------------------
BRAND_PRIMARY_COLOR=#FF1493
BRAND_SECONDARY_COLOR=#FF69B4
BRAND_ACCENT_COLOR=#FFB6C1
BRAND_DARK_COLOR=#C71585
BRAND_PURPLE_COLOR=#9370DB

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
FEATURE_TRINITY_COORDINATION=true
FEATURE_CYCLOTRON_ANALYTICS=true
FEATURE_CONSCIOUSNESS_SYNC=true
FEATURE_OPERATION_PURPLE=false
FEATURE_EXPERIMENTAL=true
FEATURE_DEBUG_MODE=true

# =============================================================================
# END OF DEVELOPMENT CONFIGURATION
# =============================================================================
