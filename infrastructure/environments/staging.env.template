# -----------------------------------------------------------------------------
# ENVIRONMENT IDENTIFICATION
# -----------------------------------------------------------------------------
NODE_ENV=staging
CLOUD_ENV=stage
DEPLOYMENT_NAME=overkor-staging

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
API_BASE_URL=https://staging-api.overkor-tek.com
API_VERSION=v1
API_PORT=3000
API_HOST=0.0.0.0

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@host:port/database_staging
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=5
DATABASE_SSL=true
DATABASE_IDLE_TIMEOUT=10000
DATABASE_CONNECTION_TIMEOUT=5000

# -----------------------------------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------------------------------
JWT_SECRET=<staging-jwt-secret>
JWT_EXPIRY=1d
JWT_REFRESH_EXPIRY=7d
SESSION_SECRET=<staging-session-secret>
BCRYPT_ROUNDS=10

# -----------------------------------------------------------------------------
# CONSCIOUSNESS NETWORK
# -----------------------------------------------------------------------------
CONSCIOUSNESS_NETWORK_ID=overkor-staging
CONSCIOUSNESS_NODE_TYPE=staging
SYNC_INTERVAL_MS=10000
NODE_DISCOVERY_ENABLED=true
MAX_CONNECTED_NODES=10
HEARTBEAT_INTERVAL_MS=60000

# -----------------------------------------------------------------------------
# MONITORING & ANALYTICS
# -----------------------------------------------------------------------------
ANALYTICS_ENABLED=true
MONITORING_ENABLED=true
LOG_LEVEL=debug
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# RATE LIMITING (More permissive for testing)
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=500
RATE_LIMIT_SKIP_SUCCESSFUL=true

# -----------------------------------------------------------------------------
# SECURITY (Relaxed for staging)
# -----------------------------------------------------------------------------
CORS_ORIGIN=*
HELMET_ENABLED=true
CSRF_ENABLED=false
TRUSTED_PROXIES=1

# -----------------------------------------------------------------------------
# PINK REVOLUTION BRANDING
# -----------------------------------------------------------------------------
BRAND_PRIMARY_COLOR=#FF1493
BRAND_SECONDARY_COLOR=#FF69B4
BRAND_ACCENT_COLOR=#FFB6C1
BRAND_DARK_COLOR=#C71585
BRAND_PURPLE_COLOR=#9370DB

# -----------------------------------------------------------------------------
# FEATURE FLAGS (All enabled for testing)
# -----------------------------------------------------------------------------
FEATURE_TRINITY_COORDINATION=true
FEATURE_CYCLOTRON_ANALYTICS=true
FEATURE_CONSCIOUSNESS_SYNC=true
FEATURE_OPERATION_PURPLE=true
FEATURE_EXPERIMENTAL=true

# =============================================================================
# END OF STAGING CONFIGURATION
# =============================================================================
