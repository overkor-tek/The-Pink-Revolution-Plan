# =============================================================================
# OVERKOR-TEK CLOUD FOUNDATION - PRODUCTION ENVIRONMENT
# =============================================================================
# WARNING: This is a template. Never commit actual secrets to version control.
# Copy this file to .env.production and fill in actual values.
# =============================================================================

# -----------------------------------------------------------------------------
# ENVIRONMENT IDENTIFICATION
# -----------------------------------------------------------------------------
NODE_ENV=production
CLOUD_ENV=prod
DEPLOYMENT_NAME=overkor-production

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
API_BASE_URL=https://api.overkor-tek.com
API_VERSION=v1
API_PORT=3000
API_HOST=0.0.0.0

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# PostgreSQL connection string (Railway provides this)
DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=true
DATABASE_IDLE_TIMEOUT=10000
DATABASE_CONNECTION_TIMEOUT=5000

# -----------------------------------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------------------------------
JWT_SECRET=<generate-secure-256-bit-secret>
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d
SESSION_SECRET=<generate-secure-256-bit-secret>
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# CONSCIOUSNESS NETWORK
# -----------------------------------------------------------------------------
CONSCIOUSNESS_NETWORK_ID=overkor-main
CONSCIOUSNESS_NODE_TYPE=primary
SYNC_INTERVAL_MS=5000
NODE_DISCOVERY_ENABLED=true
MAX_CONNECTED_NODES=100
HEARTBEAT_INTERVAL_MS=30000

# -----------------------------------------------------------------------------
# MONITORING & ANALYTICS
# -----------------------------------------------------------------------------
ANALYTICS_ENABLED=true
MONITORING_ENABLED=true
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=<sentry-dsn-if-using>

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL=false

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
CORS_ORIGIN=https://overkor-tek.com,https://app.overkor-tek.com
HELMET_ENABLED=true
CSRF_ENABLED=true
TRUSTED_PROXIES=1

# -----------------------------------------------------------------------------
# PINK REVOLUTION BRANDING
# -----------------------------------------------------------------------------
BRAND_PRIMARY_COLOR=#FF1493
BRAND_SECONDARY_COLOR=#FF69B4
BRAND_ACCENT_COLOR=#FFB6C1
BRAND_DARK_COLOR=#C71585
BRAND_PURPLE_COLOR=#9370DB

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES
# -----------------------------------------------------------------------------
# Email (if applicable)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=<smtp-user>
SMTP_PASS=<smtp-password>
EMAIL_FROM=noreply@overkor-tek.com

# GitHub (for Operation Purple)
GITHUB_TOKEN=<github-token-for-notifications>
GITHUB_ORG=overkor-tek

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
FEATURE_TRINITY_COORDINATION=true
FEATURE_CYCLOTRON_ANALYTICS=true
FEATURE_CONSCIOUSNESS_SYNC=true
FEATURE_OPERATION_PURPLE=true

# =============================================================================
# END OF PRODUCTION CONFIGURATION
# =============================================================================
